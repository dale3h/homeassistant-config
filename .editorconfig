root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.xml]
indent_style = tab
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2
